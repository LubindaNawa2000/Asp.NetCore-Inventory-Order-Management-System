@model IEnumerable<Asp.NetCore_Inventory_Order_Management_System.Models.Order>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipToAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipToCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipToState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipToCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipToPostalCode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.OrderDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipToAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipToCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipToState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipToCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ShipToPostalCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OrderId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OrderId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OrderId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
